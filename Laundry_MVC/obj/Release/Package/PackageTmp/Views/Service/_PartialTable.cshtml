@using PagedList.Mvc
@model PagedList.IPagedList<Laundry_MVC.Models.DAO.ServiceModel>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-sm table-hover table-bordered" id="table-service">
                    <thead>
                    <tr>
                        <th>No</th>
                        <th>Service Type</th>
                        <th>Service</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Auditor</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        var row = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++row)</td>
                            <td>@item.ServiceName</td>
                            <td>
                                <span class="label label-info">@item.ServiceName</span>
                            </td>
                            <td>@item.Price R</td>
                            <td>@item.Discount %</td>
                            <td>@item.Date</td>
                            <td>@item.Time</td>
                            <td>@item.Auditor</td>
                            <td>
                                <button class="btn btn-primary btn-sm" id="btn-edit" data-id="@item.ServiceId">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button class="btn btn-danger btn-sm" id="btn-delete" data-id="@item.ServiceId">
                                    <i class="fa fa-trash-o"></i>
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

<div id="contentPager" style="display: flex;justify-content: center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new {page}))
   
    @* @Html.Partial("_PageSize", new ViewDataDictionary { {"PSize", ViewBag.PSize } }) *@
</div>

