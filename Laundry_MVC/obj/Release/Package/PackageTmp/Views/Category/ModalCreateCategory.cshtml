<div class="modal fade" id="modal-add-category">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"><i class="fa fa-table"></i> New Service</h4>
            </div>
            <form method="post" id="frm-create-category">
                <div class="modal-body">
                    
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label for="Name">Service Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Service Name" required autocomplete="off">
                    </div>
                    
                    <div class="form-group">
                        <label for="Price">Unit Price</label>
                        <input type="text" class="form-control" id="Price" name="Price" placeholder="Enter Price" required autocomplete="off">
                    </div>
                    
                    <div class="form-group">
                        <label for="Whole">Whole Price</label>
                        <input type="text" class="form-control" id="Whole" name="Whole" placeholder="Enter Whole" required autocomplete="off">
                    </div>
                    
                    <div class="form-group">
                         @Html.Label("VIP")
                        <input type="text" class="form-control" id="VIP" name="VIP" placeholder="Enter VIP" required autocomplete="off">
                    </div>
        
                    <div class="form-group">
                        @Html.Label("Discount")
                        @Html.TextBox("Discount", "0", new
                        {
                            @class = "form-control", placeholder = "Enter Discount", required = "required", autocomplete = "off", maxlength="20"
                        })
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-success">
                        Save changes
                    </button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->