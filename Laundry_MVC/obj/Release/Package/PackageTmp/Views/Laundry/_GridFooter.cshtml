    <td style="background: #52c41a; color: #fff"><b>@(Model.Rows.Sum(row => row.Model.Amount) + " ៛")</b></td>
    <td></td>
    <td style="background: orange; color: #fff"><b>@(Model.Rows.Sum(row => row.Model.Commission) + " ៛")</b></td>
    <td></td>
    <td></td>
    <td></td>
</tr>

<tr>
    <td colspan="10"><b>Total ($)</b></td>
    <td></td>
    <td style="background: #52c41a; color: #fff"><b>@(Model.Rows.Sum(row => row.Model.Amount / 4000) + " $")</b></td>
    <td></td>
    <td style="background: orange; color: #fff"><b>@(Model.Rows.Sum(row => row.Model.Commission / 4000) + " $")</b></td>
