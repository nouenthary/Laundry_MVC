@using Laundry_MVC.Models
@{
    ViewBag.Title = "Config";
    
    var db = new DB_Connection();

    var config = db.Configs.ToList(); 
}

<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-body ">
        
        <form method="post" action="@Url.Action("Update","Config")">
            
            @Html.AntiForgeryToken()
            
            <div class="row">

                <div class="form-group col-md-6">
                    <label for="currency">Currency</label>
                    <input type="text" class="form-control" id="currency" name="currency" placeholder="Enter Currency" value="@config.Single(x => x.key == "currency").value">
                </div>

                <div class="form-group col-md-6">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter Phone" value="@config.Single(x => x.key == "phone").value">
                </div>

                <div class="form-group col-md-6">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title" value="@config.Single(x => x.key == "title").value">
                </div>


                <div class="form-group col-md-6">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" value="@config.Single(x => x.key == "address").value">
                </div>


                <div class="form-group col-md-6">
                    <label for="noted">Noted</label>
                    <input type="text" class="form-control" id="noted" name="noted" placeholder="Enter Noted" value="@config.Single(x => x.key == "noted").value">
                </div>


            </div>

            <div>
                <button type="submit" class="btn btn-primary">
                   <i class="fa fa-send"></i> Update
                </button>
            </div>
        </form>
        
    </div>
    <!-- /.box-body -->
</div>