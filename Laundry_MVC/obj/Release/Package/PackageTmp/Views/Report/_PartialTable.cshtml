@using Laundry_MVC.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Laundry_MVC.Models.DAO.ReportModel>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-sm table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Invoice</th>
                            <th>Customer</th>
                            <th>Type</th>
                            <th>From Date</th>
                            <th>Received Date</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Seller</th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        var row = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++row)</td>
                            <td>@item.InvoiceId</td>
                            <td>@item.Name</td>
                            <td>
                                <span class="label label-info text-center">@item.Type</span>
                            </td>
                            <td>@item.StartDate</td>
                            <td>@item.EndDate</td>
                            <td>
                                <span class="label label-success">@item.Status</span>
                            </td>
                            <td>@item.Total R</td>
                            <td>@item.Seller</td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Total</th>
                        <th style="background: #52c41a; color: #fff">@Model.Sum(x => x.Total) R</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>Total</th>
                        <th style="background: #52c41a ;  color: #fff"> @($"{Model.Sum(x => x.Total / 4100):0.00}") $</th>
                        <th></th>
                    </tr>
                    
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

<div id="contentPager" style="display: flex; justify-content: center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

    @Html.Partial("~/Views/Customer/_PageSize.cshtml", new ViewDataDictionary { { "PSize", ViewBag.PSize } })
</div>